<div>
  <% if @jobs.empty? %>
    No jobs have been posted.
  <% else %>
    <table class='table'>
      <thead>
        <tr>
          <th scope='col'>Created At</th>
          <th scope='col'>Company</th>
          <th scope='col'>Title</th>
          <th scope='col'>Description</th>
          <th scope='col'></th>
        </tr>
      </thead>
      <% @jobs.each do |job| %>
        <tbody>
          <tr>
            <td><%= job.created_at %></td>
            <td><%= job.employer.name %></td>
            <td><%= job.title %></td>
            <td><%= job.description %></td>
            <td><%= 
              link_to_unless @employer || (@applicant && Application.find_by(applicant_id: @applicant.id, job_id: job.id).nil?), 'Apply', apply_path(job_id: job.id, user_id: current_user.id), method: :post %>
            </td>
          </tr>
        </tbody>
      <% end %>
    </table>
  <% end %>  
</div>
